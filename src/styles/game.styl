$color = lightblue
$hover_color = whitesmoke
$ticColor = black

.gameView
    background-color $color
    width 100%
    height 100%
    display flex
    flex-direction column
    align-items center
    gap 110px
    &_title
        color white
        font-family 'Chivo Mono'
        font-size 35px
        font-weight 900
        margin-top 50px
    &_game
        display grid
        grid-template-columns auto auto auto
        grid-gap 8px
    &_box
        width 80px
        height 80px
        background-color white
        border-radius 5px
        border none
        &:hover
            cursor pointer
            background-color $hover_color
    &_reset
        border none
        padding 10px 20px
        border-radius 50px
        color lightblue
        font-family 'Poppins'
        font-size 18px
        font-weight 700
        &:active
            transform scale(0.96)
        &:hover
            box-shadow 0 0 8px 1px whitesmoke
            cursor pointer

.tic-item
    display flex
    justify-content center
    align-items center
    font-size 30px
    font-weight 900
    font-family 'Poppins'
    color $ticColor