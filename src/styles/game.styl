$color = lightblue
$hover_color = whitesmoke
$ticColor = black
$o = green
$x = red

.gameView
    background-color $color
    width 100%
    height 100%
    display flex
    flex-direction column
    align-items center
    gap 110px
    &_title
        color white
        font-family 'Chivo mono'
        font-size 32px
        font-weight 700
        margin-top 50px
        text-align center
    &_game
        display grid
        grid-template-columns auto auto auto
        grid-gap 8px
    &_box
        width 80px
        height 80px
        background-color white
        border-radius 5px
        border none
        &:hover
            cursor pointer
            background-color $hover_color
            transform scale(0.975)
    &_reset
        border none
        padding 10px 20px
        border-radius 50px
        color lightblue
        font-family 'Poppins'
        font-size 18px
        font-weight 700
        &:active
            transform scale(0.96)
        &:hover
            box-shadow 0 0 8px 1px whitesmoke
            cursor pointer

.tic-item
    display flex
    justify-content center
    align-items center
    font-size 2rem
    font-weight 700
    font-family 'Lato'
    font-style normal
    color $ticColor
    vertical-align middle
    line-height 1

.o-square
    color $o
    
.x-square
    color $x
    font-size 29px

.disabled
    pointer-events none
    opacity 0.8
@media screen and (max-width: 400px)
    .gameView
        gap 45px
        &_title
            font-size 22px
        &_reset
            transform scale(0.85)
    