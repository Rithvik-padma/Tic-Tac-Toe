$color = lightblue

.home
    background-color $color
    width 100%
    height 100%
    display flex
    flex-direction column
    align-items center
    &_title
        color white
        font-family 'Chivo Mono'
        font-size 35px
        font-weight 900
        margin-top 50px
    &_head
        color white
        font-family 'Chivo Mono'
        font-size 45px
        font-weight 900
        margin-top 0
    &_wrap
        padding 36px
        border 2px solid whitesmoke
        box-shadow 0 0 10px 2px whitesmoke
        border-radius 50%
        margin-bottom 70px
        margin-top 15px
    &_image
        width 140px
        height 140px
    &_play
        border none
        padding 12px 20px
        border-radius 50px
        color lightblue
        font-family 'Poppins'
        font-size 21px
        font-weight 800
        &:active
            transform scale(0.96)
        &:hover
            box-shadow 0 0 8px 1px whitesmoke
            cursor pointer
         
      
